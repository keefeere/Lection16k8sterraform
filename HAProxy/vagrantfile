
Vagrant.configure("2") do |config|
#Set up main machine - loadbalancer
  
  config.vm.provider "hyperv" do |v|
    v.memory = 2048
    v.cpus = 2
  end
  config.vm.synced_folder "./", "/vagrant", type: "smb",
  owner: "vagrant",
  #mount_options: ["dmode=775,fmode=600", "vers=3.0"]
  mount_options: ['vers=3.0', "domain=MicrosoftAccount", "username=cheseral@gmail.com"]
  #config.ssh.shell = "ash"
  #workaroud for elliminate WARNING: UNPROTECTED PRIVATE KEY FILE!   error in Ansible because WSL can't set permissions
  config.vm.define "loadbalancer" do |loadbalancer|
    
    loadbalancer.vm.box = 'generic/alpine318'
    loadbalancer.vm.hostname = "loadbalancer"
    
    loadbalancer.vm.network "private_network", ip: "192.168.50.10", bridge: "local"

    #bridged network for acces from internet on my note, mac for dhcp lease
    #loadbalancer.vm.network :public_network, :bridge => "Realtek USB GbE Family Controller", :mac=> "0800279CC9D9"

    #inital provision - update apt, install haproxy, copy inital part of confg
    loadbalancer.vm.provision "shell", path: "provision.sh"


    #restart haproxy    
    loadbalancer.vm.provision "shell",
    inline: "sudo service haproxy restart"

 
  end

end